<div id="<%= dom_id ingredient %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Ingredient:</strong>
    <%= ingredient.ingredient %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Family:</strong>
    <%= ingredient.family %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Brand:</strong>
    <%= ingredient.brand %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Organic:</strong>
    <%= ingredient.organic? ? "Yes" : "No" %>
  </div>
</div>
