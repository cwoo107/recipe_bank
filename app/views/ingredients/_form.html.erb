<%= form_with(model: ingredient, class: "space-y-6") do |form| %>
  <% if ingredient.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 dark:bg-red-500/10">
      <div class="flex">
        <div class="shrink-0">
          <svg class="size-5 text-red-400 dark:text-red-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc space-y-1 pl-5">
              <% ingredient.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :ingredient, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
    <div class="mt-2">
      <%= form.text_field :ingredient,
                          required: true,
                          placeholder: "e.g., All-purpose flour",
                          class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-[#5f734c] sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-[#7a8f62]" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :brand, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= form.text_field :brand,
                            placeholder: "Optional",
                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-[#5f734c] sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-[#7a8f62]" %>
      </div>
    </div>

    <div>
      <%= form.label :family, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= ingredient_family_select(form) %>
      </div>
      <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        Choose the ingredient category
      </p>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :unit_price, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= form.number_field :unit_price, step: "0.01",
                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-[#5f734c] sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-[#7a8f62]" %>
      </div>
    </div>

    <div>
      <%= form.label :unit_servings, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= form.number_field :unit_servings,
                              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-[#5f734c] sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-[#7a8f62]" %>
      </div>

    </div>
  </div>

  <div class="flex items-center gap-3">
    <div class="group relative inline-flex w-11 shrink-0 rounded-full bg-gray-200 p-0.5 inset-ring inset-ring-gray-900/5 outline-offset-2 outline-[#5f734c] transition-colors duration-200 ease-in-out has-checked:bg-[#5f734c] has-focus-visible:outline-2 dark:bg-white/5 dark:inset-ring-white/10 dark:outline-[#7a8f62] dark:has-checked:bg-[#7a8f62]">
      <span class="size-5 rounded-full bg-white shadow-xs ring-1 ring-gray-900/5 transition-transform duration-200 ease-in-out group-has-checked:translate-x-5"></span>
      <%= form.check_box :organic, class: "absolute inset-0 size-full appearance-none focus:outline-hidden" %>
    </div>
    <%= form.label :organic, "Organic", class: "text-sm/6 font-medium text-gray-900 dark:text-white" %>
  </div>

  <div class="flex items-center justify-end gap-x-3 border-t border-gray-900/10 pt-6 dark:border-white/10">
    <%= link_to "Cancel", ingredients_path,
                class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-xs inset-ring inset-ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring-white/5 dark:hover:bg-white/20" %>

    <%= form.submit ingredient.persisted? ? "Update Ingredient" : "Create Ingredient",
                    class: "rounded-md bg-[#5f734c] px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-[#4b5a3d] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#5f734c] dark:bg-[#7a8f62] dark:shadow-none dark:hover:bg-[#5f734c]" %>
  </div>
<% end %>