<div id="<%= dom_id nutrition_fact %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Ingredient:</strong>
    <%= nutrition_fact.ingredient_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Serving unit:</strong>
    <%= nutrition_fact.serving_unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Serving size:</strong>
    <%= nutrition_fact.serving_size %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total fat:</strong>
    <%= nutrition_fact.total_fat %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total carb:</strong>
    <%= nutrition_fact.total_carb %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Protein:</strong>
    <%= nutrition_fact.protein %>
  </div>
</div>
