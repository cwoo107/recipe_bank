<div id="<%= dom_id recipe_ingredient %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Recipe:</strong>
    <%= recipe_ingredient.recipe_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Ingredient:</strong>
    <%= recipe_ingredient.ingredient_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= recipe_ingredient.unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= recipe_ingredient.quantity? ? "Yes" : "No" %>
  </div>
</div>
