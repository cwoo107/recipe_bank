<div class="sm:flex sm:items-center sm:justify-between">
  <div>
    <h1 class="text-5xl font-bold tracking-tight text-olive-800 dark:text-[#e8ede3]">Tags</h1>
    <p class="mt-2 text-sm text-gray-700 dark:text-gray-400">Organize your recipes with tags.</p>
  </div>
  <div class="mt-4 sm:ml-16 sm:mt-0">
    <%= link_to new_tag_path,
                class: "inline-flex items-center gap-x-2 rounded-md bg-[#5f734c] px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-[#4b5a3d] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#5f734c] dark:bg-[#7a8f62] dark:shadow-none dark:hover:bg-[#5f734c]" do %>
      <svg viewBox="0 0 20 20" fill="currentColor" class="-ml-0.5 size-5" aria-hidden="true">
        <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
      </svg>
      New Tag
    <% end %>
  </div>
</div>

<div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @tags.each do |tag| %>
    <div class="relative flex flex-col rounded-lg bg-white p-6 shadow-sm inset-ring inset-ring-gray-900/5 dark:bg-white/5 dark:inset-ring-white/10">
      <div class="flex items-center justify-between">
        <span class="inline-flex items-center rounded-full px-3 py-1.5 text-sm font-medium inset-ring inset-ring-gray-900/10 dark:inset-ring-white/10"
              style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
          <%= tag.tag %>
        </span>

        <div class="flex items-center gap-x-2">
          <%= link_to edit_tag_path(tag), class: "text-gray-400 hover:text-[#5f734c] dark:text-gray-500 dark:hover:text-[#7a8f62]" do %>
            <svg viewBox="0 0 20 20" fill="currentColor" class="size-5" aria-hidden="true">
              <path d="m5.433 13.917 1.262-3.155A4 4 0 0 1 7.58 9.42l6.92-6.918a2.121 2.121 0 0 1 3 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 0 1-.65-.65Z" />
              <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0 0 10 3H4.75A2.75 2.75 0 0 0 2 5.75v9.5A2.75 2.75 0 0 0 4.75 18h9.5A2.75 2.75 0 0 0 17 15.25V10a.75.75 0 0 0-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5Z" />
            </svg>
          <% end %>

          <%= button_to tag_path(tag), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-gray-400 hover:text-red-600 dark:text-gray-500 dark:hover:text-red-400" do %>
            <svg viewBox="0 0 20 20" fill="currentColor" class="size-5" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
      </div>

      <div class="mt-4 flex items-center gap-x-2">
        <div class="size-6 rounded border border-gray-200 dark:border-white/10" style="background-color: <%= tag.color %>;"></div>
        <span class="text-xs font-mono text-gray-500 dark:text-gray-400"><%= tag.color %></span>
      </div>

      <div class="mt-4 pt-4 border-t border-gray-200 text-sm text-gray-500 dark:border-white/10 dark:text-gray-400">
        <%= pluralize(tag.recipes.count, 'recipe') %>
      </div>
    </div>
  <% end %>
</div>